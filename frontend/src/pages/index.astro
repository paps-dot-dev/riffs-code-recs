---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Hero
	from "../components/Hero.astro";
import Card
	from "../components/Card.astro";
import RecentlyAddedCard
	from "../components/RecentlyAddedCard.astro";

