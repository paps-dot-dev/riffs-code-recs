---

<Layout>
	<Hero title="Riffs. Code. Community." navTitle="Home."/>
	<section class="">
		<ul class="flex justify-between items-center space-x-4">
		<Card title="Playlist" href="music"/>
			<Card title="Tech" href="/"/>
			<Card title="Tips" href="/"/>
		</ul>
	</section>
	<section class="my-16 bg-white/70 p-16 py-10 rounded-2xl text-black">
		<h2 class=" text-7xl font-extralight text-stone-500">Hot off the Press ☕️</h2>
		<ul class="p-5 space-y-2">
			<RecentlyAddedCard/>
			<RecentlyAddedCard/>
			<RecentlyAddedCard/>
			<RecentlyAddedCard/>
		</ul>
	</section>
</Layout>
