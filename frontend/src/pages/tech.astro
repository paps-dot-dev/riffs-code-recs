---
import Layout from '../layouts/Layout.astro';
import RecommendationCard from '../components/RecommendationCard.astro';

const recommendations = [
  {
    title: "Next.js 14",
    description: "The latest version of Next.js brings incredible performance improvements and new features like Server Actions.",
    date: "2024-03-20",
    link: "https://nextjs.org/blog/next-14"
  },
  {
    title: "Mechanical Keyboard: Keychron Q1",
    description: "A premium mechanical keyboard with QMK/VIA support, perfect for developers who appreciate good tactile feedback.",
    date: "2024-03-18",
    link: "https://www.keychron.com/products/keychron-q1"
  },
  {
    title: "VS Code Extension: GitHub Copilot",
    description: "An AI pair programmer that helps you write better code faster. A game-changer for development workflow.",
    date: "2024-03-15",
    link: "https://github.com/features/copilot"
  }
];
---

<Layout title="Tech Recommendations">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="font-display text-4xl font-bold mb-8 text-primary-300">Tech Recommendations</h1>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {recommendations.map(rec => (
        <RecommendationCard 
          title={rec.title}
          description={rec.description}
          category="tech"
          date={rec.date}
          link={rec.link}
        />
      ))}
    </div>
  </div>
</Layout>