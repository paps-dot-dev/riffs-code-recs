---
interface Props {
  title: string;
  description: string;
  category: string;
  link?: string;
  date: string;
}

const { title, description, category, link, date } = Astro.props;
---

<article class="bg-gray-900 rounded-lg p-6 border border-gray-800 hover:border-primary-500 transition">
  <div class="flex justify-between items-start mb-4">
    <h3 class="font-display text-xl text-primary-300">{title}</h3>
    <span class="text-sm text-gray-400">{date}</span>
  </div>
  <p class="text-gray-300 mb-4">{description}</p>
  {link && (
    <a 
      href={link} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="text-primary-300 hover:text-primary-400 inline-flex items-center"
    >
      Learn more â†’
    </a>
  )}
</article>